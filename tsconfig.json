{
  "compilerOptions": {
    "outDir": "dist",
    "module": "Node18",
    "target": "ES2020",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@/cli/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
